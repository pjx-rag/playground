{
  "name": "playground-assets",
  "version": "1.0.0",
  "description": "Assets for Playground Phoenix application",
  "main": "js/app.js",
  "scripts": {
    "build": "cp css/heroicons.css ../priv/static/assets/heroicons.css && NODE_ENV=development postcss css/app.css -o ../priv/static/assets/app.css",
    "deploy": "cp css/heroicons.css ../priv/static/assets/heroicons.css && NODE_ENV=production postcss css/app.css -o ../priv/static/assets/app.css --minify",
    "watch": "cp css/heroicons.css ../priv/static/assets/heroicons.css && postcss css/app.css -o ../priv/static/assets/app.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.16"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.0.0"
  }
}
